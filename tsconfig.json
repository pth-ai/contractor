{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "allowJs": true,
    "strictNullChecks": true,
    "noEmit": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM"
    ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "example",
    "tests"
  ]
}
